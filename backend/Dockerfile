# Base imagee
FROM node:16 as build

RUN mkdir -p /app
# Create app directory
WORKDIR /app

# A wildcard is used to ensure both package.json AND package-lock.json are copied
COPY package*.json ./
COPY prisma ./prisma/

# Install yarn
RUN npm install yarn -g --force

# Install app dependencies
RUN yarn install --network-timeout 100000
RUN npx prisma generate

# Bundle app source
COPY . .

ARG MONGO_INITDB_ROOT_USERNAME
ARG MONGO_INITDB_ROOT_PASSWORD
ARG MONGODB_SERVER
ARG MONGODB_ENABLE_ADMIN
ARG MONGODB_ADMINUSERNAME
ARG MONGODB_ADMINPASSWORD
ARG MONGODB_BASICAUTH_USERNAME
ARG MONGODB_BASICAUTH_PASSWORD
ARG MONGO_REPLICA_HOST
ARG MONGO_REPLICA_PORT
ARG DATABASE_URL

ENV MONGO_INITDB_ROOT_USERNAME      $MONGO_INITDB_ROOT_USERNAME
ENV MONGO_INITDB_ROOT_PASSWORD      $MONGO_INITDB_ROOT_PASSWORD
ENV MONGODB_SERVER                  $MONGODB_SERVER
ENV MONGODB_ENABLE_ADMIN            $MONGODB_ENABLE_ADMIN
ENV MONGODB_ADMINUSERNAME           $MONGODB_ADMINUSERNAME
ENV MONGODB_ADMINPASSWORD           $MONGODB_ADMINPASSWORD
ENV MONGODB_BASICAUTH_USERNAME      $MONGODB_BASICAUTH_USERNAME
ENV MONGODB_BASICAUTH_PASSWORD      $MONGODB_BASICAUTH_PASSWORD
ENV MONGO_REPLICA_HOST              $MONGO_REPLICA_HOST
ENV MONGO_REPLICA_PORT              $MONGO_REPLICA_PORT
ENV DATABASE_URL                    $DATABASE_URL

# Creates a "dist" folder with the production build
RUN yarn build

EXPOSE 4000

# Start the server using the production build
CMD [ "node", "dist/src/main.js" ]